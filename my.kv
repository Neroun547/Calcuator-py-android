<Container>:
    orientation:"vertical"
    padding:50

    writeTextId:text_input
    outPutTextId:out_put

    BoxLayout:
        padding:20
        Label:
            id:text_input
            size_hint:1, 0.4
            font_size:60

    BoxLayout:
        orientation:"horizontal"
        Button:
            text:"+"
            on_release:
                root.change_operation("+")

        Button:
            text:"-"
            on_release:
                root.change_operation("-")
        Button:
            text:"/"
            on_release:
                root.change_operation("/")
        Button:
            text:"*"
            on_release:
                root.change_operation("*")

    BoxLayout:
        orientation:"horizontal"
        Button:
            text:"0"
            on_release:
                root.change_num("0")
        Button:
            text:"1"
            on_release:
                root.change_num("1")
        Button:
            text:"2"
            on_release:
                root.change_num("2")
        Button:
            text:"%"
            on_release:
                root.change_operation("%")

    BoxLayout:
        orientation:"horizontal"
        Button:
            text:"3"
            on_release:
                root.change_num("3")
        Button:
            text:"4"
            on_release:
                root.change_num("4")
        Button:
            text:"5"
            on_release:
                root.change_num("5")
        Button:
            text:"square"
            on_release:
                root.change_operation("square")
            
    BoxLayout:
        orientation:"horizontal"
        Button:
            text:"6"
            on_release:
                root.change_num("6")
        Button:
            text:"7"
            on_release:
                root.change_num("7")
        Button:
            text:"8"
            on_release:
                root.change_num("8")
        Button:
            text:"9"
            on_release:
                root.change_num("9")
    BoxLayout:
        Button:
            text:"."
            on_release:
                root.change_num(".")
        Button:
            text:"clear"
            on_release:
                root.change_operation("clear")
        Button:
            text:"Del"
            on_release:
                root.change_operation("Del")


    FloatLayout:
        Button:
            pos_hint:{"center_x":0.5, "y":0.1}
            size_hint:0.5, 0.4
            text:"="
            font_size:20
            on_release:
                root.change_operation('=')
    Label:
        margin_top:30 
        id:out_put
        text:"0"
        font_size:60